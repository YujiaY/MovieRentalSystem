    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<hr />
<p>This is a Movie named: <strong>@Model.Name</strong>.</p>

<ul>
    <li>Genre: @Model.Genre.Name</li>
    @*@if (@Model.Birthdate.HasValue)*@
